{{#if messages.errors }}
<div class="alert alert-danger alert-dismissible" id="alertMessage" role='alert'>
  {{#each messages.errors }}
    <div>{{ this.msg }}</div>
  {{/each}}
    <button type="button" class="close" aria-label="Close" data-bs-dismiss='alert'>&times;</button>
</div>
{{/if}}

{{#if messages.info }}
<div class="alert alert-primary alert-dismissible" id="alertMessage" role='alert'>
  {{#each messages.info }}
    <div>{{ this.msg }}</div>
  {{/each}}
  <button type="button" class="close" aria-label="Close" data-bs-dismiss='alert'>&times;</button>
</div>
{{/if}}

{{#if messages.success }}
<div class="alert alert-success alert-dismissible" id="alertMessage" role='alert'>
  {{#each messages.success }}
    <div>{{ this.msg }}</div>
  {{/each}}
  <button type="button" class="close" aria-label="Close" data-bs-dismiss='alert'>&times;</button>
</div>
{{/if}}

