<div class="col-lg-12 col-md-6 col-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Add Category</h4>
        </div>
        <div class="card-content">
            <div class="card-body">
                <form class="form form-horizontal" method="POST">
                    <div class="form-body">
                        <div class="row">
                            <div class="col-md-4">
                                <label>Username</label>
                            </div>
                            <div class="col-md-8 form-group">
                                <input type="text" class="form-control"
                                    value="{{ bill.userId.username}}" readonly>
                            </div>
                            <div class="col-md-4">
                                <label>Fullname</label>
                            </div>
                            <div class="col-md-8 form-group">
                                <input type="text" class="form-control"
                                    value="{{ bill.fullname}}" readonly>
                            </div>
                            <div class="col-md-4">
                                <label>Email</label>
                            </div>
                            <div class="col-md-8 form-group">
                                <input type="text" class="form-control"
                                    value="{{ bill.email}}" readonly>
                            </div>
                            <div class="col-md-4">
                                <label>Phone</label>
                            </div>
                            <div class="col-md-8 form-group ">
                                <input type="text" class="form-control"
                                    value="{{ bill.phone}}" readonly>
                            </div>
                            <div class="col-md-4">
                                <label>Address</label>
                            </div>
                            <div class="col-md-8 form-group ">
                                <input type="text" class="form-control"
                                    value="{{ bill.address}}" readonly>
                            </div>
                            <div class="col-md-4">
                                <label>Payment</label>
                            </div>
                            <div class="col-md-8 form-group ">
                                <input type="text" class="form-control"
                                    value="{{ bill.payment}}" readonly>
                            </div>
                            <div class="col-md-4">
                                <label>Note</label>
                            </div>
                            <div class="col-md-8 form-group ">
                                <input type="text" class="form-control"
                                    value="{{ bill.note}}" readonly>
                            </div>
                            <div class="col-md-4">
                                <label>Product</label>
                            </div>
                            <div class="col-md-8 form-group ">
                                {{#each bill.cart}}
                                <input type="text" class="form-control"
                                    value="{{ nameProduct}}, Size: {{size}}, Quantity: {{quantity}}" readonly>
                                {{/each}}
                            </div>
                            
                            <div class="col-md-4">
                                <label>Status</label>
                            </div>
                            <div class="col-md-8 form-group ">
                                {{#switch bill.status}}
                                    <input class="form-check-input" type="radio" value="0" name="status"
                                        id="newBill" {{#case 0}} checked="checked" {{/case}}>
                                    <label class="form-check-label" for="newEmail">
                                        New Bill
                                    </label>
                                    <input class="form-check-input" type="radio" value="1" name="status"
                                        id="not_delivered_yet" {{#case 1}} checked="checked" {{/case}}>
                                    <label class="form-check-label" for="not_delivered_yet">
                                        Not Delivered Yet
                                    </label>
                                    <input class="form-check-input" type="radio" value="2" name="status"
                                        id="Shipped" {{#case 2}} checked="checked" {{/case}}>
                                    <label class="form-check-label" for="Shipped">
                                        Shipped
                                    </label>
                                    <input class="form-check-input" type="radio" value="3" name="status"
                                        id="Delivered" {{#case 3}} checked="checked" {{/case}}>
                                    <label class="form-check-label" for="Delivered">
                                        Delivered
                                    </label>
                                {{/switch}}
                            </div>
                            <div class="col-12 d-flex justify-content-end">
                                <button type="submit"
                                    class="btn btn-primary me-1 mb-1">Submit</button>
                                <button type="reset"
                                    class="btn btn-light-secondary me-1 mb-1">Reset</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
