<section id="product">
    <div class="container">      
        <!-- Product Details-->
        <div class="row">
            <!-- Left Image-->
            <div class="col-lg-5">
                <ul class="thumbnails mainimage">
                    <li>
                    <a  rel="position: 'inside' , showTitle: false, adjustX:-4, adjustY:-4" class="thumbnail cloud-zoom" href="https://drive.google.com/uc?export=view&id={{ product.imageProduct.file}}">
                        <img src="https://drive.google.com/uc?export=view&id={{ product.imageProduct.file}}" alt="" title="">
                    </a>
                    </li>
                </ul>
                <span>Mouse move on Image to zoom</span>
                <ul class="thumbnails mainimage">
                    <li class="producthtumb">
                    <a class="thumbnail" >
                        <img  src="https://drive.google.com/uc?export=view&id={{ product.imageProduct.file}}" alt="" title="">
                    </a>
                    </li>
                </ul>
            </div>
            <!-- Right Details-->
            <div class="col-lg-7">
                <div class="row">
                    <form class="form-vertical" role="form" action="/cart" method="POST">
                        <input type="hidden" name="productId" style="display:none;" value="{{ product._id}}">
                        <div class="col-lg-12">
                            <h1 class="productname"><span class="bgnone">{{ product.nameProduct}}</span></h1>
                            <div class="productprice">
                                <div class="productpageprice">
                                {{#ifEquals product.priceProduct 0}}
                                <span class="spiral"></span>$ {{ product.priceProduct}}</div>
                                {{else}}
                                <span class="spiral"></span>$ {{ product.price_newProduct}}</div>
                                <div class="productpageoldprice">Old price : $ {{ product.priceProduct}}</div>
                                {{/ifEquals}}
                                <ul class="rate">
                                    <li class="on"></li>
                                    <li class="on"></li>
                                    <li class="on"></li>
                                    <li class="off"></li>
                                    <li class="off"></li>
                                </ul>
                            </div>
                            <div class="quantitybox">
                                <div class="col-sm-6">
                                    <legend>Size</legend>
                                    <select class="selectsize" name="size">
                                        {{#each product.sizeProduct.size}}
                                        <option value="{{ size}}">{{ size}}</option>
                                        {{/each}}
                                    </select>
                                </div>
                                <div class="col-sm-6">
                                    <legend>Quantity</legend>
                                    <div class="col-lg-5">
                                        <input type="text" id="quantity" name="quantity" class="form-control input-number" value="1" >
                                    </div>
                                    
                                </div>
                                <div class="clear"></div>
                            </div>
                            {{#ifEquals product.statusProduct 0}}
                            <button disabled type="submit" class="btn btn-orange" style="font-size: 20px"><span class="glyphicon glyphicon-shopping-cart"></span> Add to Cart</button>
                            {{else}}
                            <button type="submit" class="btn btn-orange" style="font-size: 20px"><span class="glyphicon glyphicon-shopping-cart"></span> Add to Cart</button>
                            {{/ifEquals}}
                        </div>
                    </form>
                </div>
                <!-- Product Description tab & comments-->
                <div class="productdesc">
                    <ul class="nav nav-tabs" id="myTab">
                        <li class="active"><a href="#detail">Product Detail</a>
                        </li>
                        <li><a href="#description">Product Description</a>
                        </li>
                        <li><a href="#specification">Specification</a>
                        </li>
                        <li><a href="#producttag">Tags</a>
                        </li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane active" id="detail">{{ product.contentProduct}}</div>
                        <div class="tab-pane" id="description">{{ product.descriptionProduct}}</div>
                        <div class="tab-pane " id="specification">
                        </div> 

                        <div class="tab-pane" id="producttag">
